@model Vidly.ViewModels.CustomersViewModel
@{
    ViewData["Title"] = "Customers";
}
<h2>Customers</h2>

@if (!Model.Customers.Any())
{
    <Text>We Don't have any customers yet</Text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        @foreach (var customer in Model.Customers)
        {
            @*<a asp-area="" asp-controller="Customers" asp-action="Details">Customers</a>*@
            <tr>
                <td>
                    <a asp-controller="Customers" asp-action="Details" asp-route-id=@customer.Id>@customer.Name</a>
                    @*@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id })*@
                </td>
                <td>@customer.MembershipType.DiscountRate%</td>
            </tr>
        }
    </table>
}