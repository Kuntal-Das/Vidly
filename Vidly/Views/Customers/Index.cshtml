@model Vidly.ViewModels.CustomersViewModel
@{
    ViewData["Title"] = "Customers";
}
<h2>Customers</h2>

@if (Model.Customers.Count == 0)
{
    <Text>No Customer Information Found</Text>
}
else
{
    <table class="table table-bordered table-hover">
        @foreach (var customer in Model.Customers)
        {
            @*<a asp-area="" asp-controller="Customers" asp-action="Details">Customers</a>*@
            <tr>
                <td>
                    <a asp-controller="Customers" asp-action="Details" asp-route-id=@customer.Id>@customer.Name</a>
                    @*@Html.ActionLink(customer.Name, "Details", "Customers", new { id = 1 })*@
                </td>
            </tr>
        }
    </table>
}