@model Vidly.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}
<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.DOB.HasValue)
    {
        <li>Birth Date: @Model.DOB.Value.ToLongDateString()</li>
    }
</ul>