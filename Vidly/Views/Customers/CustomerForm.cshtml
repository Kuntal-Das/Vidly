@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewData["Title"] = "Customer Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Customer != null)
{
    <h2>Update Customer</h2>
}
else
{
    <h2>New Customer</h2>
}
<form asp-action="Save" asp-controller="Customers" method="post">
    <div class="form-group">
        <label asp-for="Customer.Name" class="control-label">Name</label>
        <input asp-for="Customer.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Customer.DOB" class="control-label">Date of birth</label>
        <input asp-for="Customer.DOB" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Customer.MembershipTypeId">Membership type</label>
        <select asp-for="Customer.MembershipTypeId"
                asp-items="@(new SelectList(Model.MembershipTypes,"Id","Name"))"
                class="form-select">
            <option value="">Select Membership Type</option>
        </select>
    </div>
    <div class="checkbox">
        <input type="checkbox" asp-for="Customer.IsSubscribedToNewsLetter" />
        <label asp-for="Customer.IsSubscribedToNewsLetter" class="control-label">Is subscribed to newsletter</label>
    </div>

    @Html.HiddenFor(m => m.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
</form>
