@model Vidly.ViewModels.MoviesViewModel
@{
    ViewData["Title"] = "Movies";
}
<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <Text>No Movies Information Found</Text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genere</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                @*<a asp-area="" asp-controller="Customers" asp-action="Details">Customers</a>*@
                <tr>
                    <td>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id=@movie.Id>@movie.Name</a>
                        @*@Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id })*@
                    </td>
                    <td>@movie.Genere.Name</td>
                </tr>
            }
        </tbody>
    </table>
}