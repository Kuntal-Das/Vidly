@model Vidly.ViewModels.MoviesViewModel
@{
    ViewData["Title"] = "Movies";
}
<h2>Movies</h2>
<a asp-action="New" asp-controller="Movies" class="btn btn-secondary">Add Movie</a>
@if (!Model.Movies.Any())
{
    <Text>No Movies Information Found</Text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genere</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id=@movie.Id>@movie.Name</a>
                    </td>
                    <td>@movie.Genere.Name</td>
                </tr>
            }
        </tbody>
    </table>
}