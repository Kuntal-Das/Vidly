@model Vidly.Models.Movie
@{
    ViewData["Ttile"] = "Movie Details";
}
<h2>@Model.Name</h2>
<a asp-action="Edit" asp-controller="Movies" asp-route-id=@Model.Id>Edit</a>
<ul>
    <li>Genere : @Model.Genere.Name</li>
    <li>Release Date : @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added : @Model.DateAdded.ToShortDateString()</li>
    <li>Stock: @Model.Stock</li>
</ul>