@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    <h2>By passing it as a param in View() func : @(Model.Name)</h2>
    //might case prob later
    <h2>Form ViewData   : @((ViewData["Movie"] as Movie).Name)</h2>
    //might case prob later
    <h2>From ViewBag    : @(ViewBag.Movie.Name)</h2>
*@

@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">Using VM : @(Model.Movie.Name)</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented the movie yet</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>

}